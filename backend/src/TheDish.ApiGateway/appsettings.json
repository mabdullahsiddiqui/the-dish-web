{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Ocelot": "Information"
    }
  },
  "AllowedHosts": "*",
  "ServiceUrls": {
    "UserService": "http://localhost:5001",
    "PlaceService": "http://localhost:5002",
    "ReviewService": "http://localhost:5003"
  },
  "Jwt": {
    "SecretKey": "YourSuperSecretKeyThatShouldBeAtLeast32CharactersLongForProduction!",
    "Issuer": "TheDish",
    "Audience": "TheDish",
    "AccessTokenExpirationMinutes": "60"
  },
  "RateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 100
      }
    ],
    "QuotaExceededResponse": {
      "Content": "{{ \"message\": \"API rate limit exceeded\", \"details\": \"Quota exceeded. Maximum allowed: {0} per {1}. Please retry after {2} second(s).\" }}",
      "ContentType": "application/json",
      "StatusCode": 429
    }
  }
}
